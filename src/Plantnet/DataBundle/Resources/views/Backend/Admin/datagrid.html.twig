{% extends app.request.isXmlHttpRequest ? "PlantnetDataBundle:Backend:ajax_form_layout.html.twig" : "PlantnetDataBundle:Backend:form_layout.html.twig" %}
{% block title module.name %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <ul class="breadcrumb">
        <li>
            <a href="{{ path('admin_collection_view', { 'collection': collection.name }) }}">
                {{ collection.name }}
            </a>
            <span class="divider">/</span>
        </li>
        <li class="active">
            {{ module.name }}
        </li>
    </ul>
    <div id="results">
        {% if paginator|length > 0 %}
            <div class="pagerfanta">
                {{ pagerfanta(paginator, 'twitter_bootstrap') }}
            </div>
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        {% for property in module.properties if property.id in display %}
                            <th>{{ property.name }}</th>
                        {% endfor %}
                        <th>Images</th>
                        <th>Locations</th>
                    </tr>
                </thead>
                <tbody>
                    {% for plantunit in paginator %}
                        <tr>
                            {% for field in display %}
                                <td>{{ plantunit.attributes[field] }}</td>
                            {% endfor %}
                            <td>
                                {{ plantunit.images|length }}
                            </td>
                             <td>
                                {{ plantunit.locations|length }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function() {
            // $("table").tablesorter({widthFixed: false, widgets: ['zebra'] });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('.pagerfanta a').click(function(e) {
                e.preventDefault();
                var $url=$(this).attr('href');
                $('#content').prepend('<div class="page-loading"></div>');
                $.get($url, function(data) {
                    $('#content').html(data);
                });
            });
        });
    </script>
{% endblock %}